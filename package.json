{
  "name": "Codenames",
  "version": "1.0.0",
  "private": "true",
  "scripts": {
    "start": "npx @11ty/eleventy --input=./codenames.clivemurray.com --serve",

    "lint-tooling": "npx eslint '*.js' 'tooling/**/*.js'",
    "build": "npm-run-all buildsite:*",
    "lint": "npm-run-all lint:*:* lint-tooling",
    "dev": "npm-run-all lint build watch",
    "watch": "npm-run-all --parallel watchsite:*",
    "buildsite:codenames.clivemurray.com": "node tooling/clean.js codenames.clivemurray.com && npm-run-all build:*:codenames",
    "watchsite:codenames.clivemurray.com": "npm-run-all --parallel watch:*:codenames",
    "devsite:codenames.clivemurray.com": "npm-run-all lint:*:codenames buildsite:codenames.clivemurray.com watchsite:codenames.clivemurray.com",
    "lint:js:codenames": "npx eslint codenames.clivemurray.com",
    "lint:styles:codenames": "npm-run-all prettify:codenames stylelint:codenames",
    "prettify:codenames": "prettier './codenames.clivemurray.com/assets/styles/style.scss' --write",
    "stylelint:codenames": "stylelint './codenames.clivemurray.com/assets/styles/**/*.scss' --customSyntax postcss-scss",
    "build:copyassets:codenames": "node tooling/copy-assets.js codenames.clivemurray.com data,fonts",
    "build:styles:codenames": "node tooling/build-css.js codenames.clivemurray.com",
    "build:js:codenames": "node tooling/build-js.js codenames.clivemurray.com",
    "watch:assets:codenames": "onchange './codenames.clivemurray.com/assets/data' -- npm run build:copyassets:codenames",
    "watch:styles:codenames": "onchange './codenames.clivemurray.com/assets/styles/**/*.scss' -- npm-run-all lint:styles:codenames build:styles:codenames",
    "watch:js:codenames": "onchange './codenames.clivemurray.com/assets/js/**/*.js' -- npm-run-all lint:js:codenames build:js:codenames"
  },
  "author": "Clive Murray <clive+murray@clivemurray.com>",
  "license": "UNLICENSED",
  "type": "module",
  "browserslist": [
    ">0.3%, last 5 versions, not dead"
  ],
  "engines": {
    "node": "18.16.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@springernature/eslint-config": "5.0.5",
    "eslint": "7.17.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-no-use-extend-native": "0.5.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-unicorn": "28.0.2",
    "nodemon": "2.0.20",
    "onchange": "7.1.0",
    "stylelint": "15.6.0",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard-scss": "9.0.0",
    "stylelint-scss": "4.6.0"
  },
  "dependencies": {
    "@babel/core": "7.20.12",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/plugin-transform-object-assign": "7.18.6",
    "@babel/preset-env": "7.20.2",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-commonjs": "24.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "autoprefixer": "10.4.13",
    "del": "7.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.21",
    "postcss-csso": "6.0.1",
    "postcss-custom-properties": "12.1.11",
    "postcss-scss": "4.0.6",
    "prettier": "2.8.2",
    "rollup": "3.9.1",
    "sass": "1.57.1",
    "sharp": "0.31.3",
    "svgo": "3.0.2",
    "util": "0.12.5"
  }
}
